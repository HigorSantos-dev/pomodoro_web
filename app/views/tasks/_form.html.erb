<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading"><%= pluralize(task.errors.count, "error") %> proibiram esta tarefa de ser salva:</h4>
      <ul class="mb-0">
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="d-flex justify-content-center align-items-center mt-5">
    <div class="card shadow" style="width: 40rem;">
      <div class="card-body">
        <div class="mb-3">
          <%= form.label :titulo, class: "form-label" %>
          <%= form.text_field :titulo, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :status, class: "form-label" %>
          <%= form.select :status, 
                [["Pendente", "pendente"], ["Em andamento", "em_andamento"], ["ConcluÃ­do", "concluido"]], 
                {}, 
                class: "form-select" %>
        </div>

        <div class="mb-3">
          <%= form.label :descricao, class: "form-label" %>
          <%= form.text_area :descricao, class: "form-control", rows: 3 %>
        </div>

        <div class="d-flex justify-content gap-2 mt-3">
          <%= link_to "Voltar", tasks_path, class: "btn btn-outline-primary" %>
          <%= form.submit "Salvar", class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
